<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="SandyBrown">
        <TextBlock x:Name="txt" HorizontalAlignment="Center" Margin="0,69,0,0" TextWrapping="Wrap" Text="Ожидание информации о файле" VerticalAlignment="Top" FontSize="20" FontFamily="Yu Gothic UI Semibold" FontWeight="Bold"/>
        <TextBlock x:Name="infoText" HorizontalAlignment="Left" Margin="244,166,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button x:Name="btn" Content="Получить файл" Click="BtnClick" HorizontalAlignment="Center" Margin="0,286,0,0" VerticalAlignment="Top" Height="46" Width="191" FontSize="18"/>

    </Grid>
</Window>
